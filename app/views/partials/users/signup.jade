.signup(ng-controller="SignUpCtrl")
	.boiler-form
		.cf
			input(type="text", placeholder="email", ng-model="user.email")
		.cf
			input(type="password", placeholder="password", ng-model="user.password")
		.cf
			input(type="password", placeholder="password confirmation", ng-model="user.passwordConfirmation")
		.cf
			button.go(ng-click="signUp()") Sign Up

		.social
			h3 Or
			button.btn-facebook
				i(class="fa fa-facebook fa-fw")
				p Sign Up With Facebook
			br
			button.btn-twitter 
				i(class="fa fa-twitter fa-fw")
				p Sign Up With Twitter